<style>
    @keyframes righttoleft {
        0% {
            right: -300px;
        }

        50% {
            right: 20px;
        }

        100% {
            right: 10px;
        }
    }

    @keyframes fadeout {
        0% {
            right: 10px;
        }

        100% {
            right:
                -300px;
        }
    }

    .toast-body {
        width: 260px;
        height: 80px;
        z-index: 999;
        display: flex;
        justify-content: center;
        align-items: center;
        position:fixed;
        border-radius: 10px;
        top: 10px;
        right: -300px;
        text-align: center;
        color: white;
        animation: righttoleft 0.5s ease forwards, fadeout 0.5s ease 2s forwards;
        
    }
    .bg-success {
        background-color: #28a745;
        color: white;
        border: 1px solid #626d76;
    }
    .bg-danger {
        background-color: #dc3545;
        color: white;
        border: 2px solid #626d76;
    }
    .bg-warning {
        background-color: #ffc107;
        color: black;
        border: 1px solid #626d76;
    }
</style>


<div class="toast-body bg-{{message.type}}">
    <span>{{message.msg}}</span>
</div>